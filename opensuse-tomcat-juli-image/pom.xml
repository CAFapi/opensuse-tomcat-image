<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.cafapi.opensuse.tomcat</groupId>
        <artifactId>opensuse-tomcat-image-aggregator</artifactId>
        <version>5.15.1-990</version>
    </parent>

    <artifactId>opensuse-tomcat-juli-image</artifactId>
    <packaging>pom</packaging>
    
    <name>openSUSE Tomcat JULI image</name>

    <properties>
        <maven.install.skip>true</maven.install.skip>
        <DOCKER_HUB_PUBLIC>${dockerHubPublic}</DOCKER_HUB_PUBLIC>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.34.0</version>
                <executions>
                    <execution>
                        <id>docker-build</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>start-docker-image</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop-docker-image</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>docker-push</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>push</goal>
                        </goals>
                        <configuration>
                            <filter>opensuse-tomcat-juli</filter>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <images>
                        <image>
                            <alias>opensuse-tomcat-juli</alias>
                            <name>${dockerCafImagePrefix}opensuse-tomcat-juli${dockerProjectVersion}</name>
                            <build>
                                <dockerFileDir>.</dockerFileDir>
                                <args>
                                    <!-- Enable internet access -->
                                    <http_proxy>${env.HTTP_PROXY}</http_proxy>
                                    <https_proxy>${env.HTTPS_PROXY}</https_proxy>
                                    <no_proxy>${env.NO_PROXY}</no_proxy>
                                </args>
                            </build>
                        </image>
                        <image>
                            <name>${dockerCafImagePrefix}opensuse-tomcat-juli-test${dockerProjectVersion}</name>
                            <build>
                                <from>${dockerCafImagePrefix}opensuse-tomcat-juli${dockerProjectVersion}</from>
                                <assembly>
                                    <basedir>/</basedir>
                                    <inline>
                                        <files>
                                            <file>
                                                <source>src/test/resources/test.html</source>
                                                <outputDirectory>usr/share/tomcat/webapps/mywebapp</outputDirectory>
                                            </file>
                                        </files>
                                    </inline>
                                </assembly>
                            </build>
                            <run>
                                <log>
                                    <enabled>true</enabled>
                                </log>
                                <ports>
                                    <port>${tomcat.port}:8080</port>
                                </ports>
                                <wait>
                                    <http>
                                        <method>GET</method>
                                        <url>http://${docker.host.address}:${tomcat.port}/mywebapp/test.html</url>
                                    </http>
                                    <time>120000</time>
                                    <shutdown>500</shutdown>
                                </wait>
                            </run>
                        </image>
                    </images>
                    <verbose>true</verbose>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
